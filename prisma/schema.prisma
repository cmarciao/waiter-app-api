generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserType {
    WAITER
    ADMIN

    @@map("user_type")
}

model User {
    id       String   @id @default(uuid()) @db.Uuid
    name     String
    email    String   @unique
    password String
    type     UserType

    @@map("users")
}

model Category {
    id    String @id @default(uuid()) @db.Uuid
    emoji String
    name  String @unique

    @@map("categories")
}
